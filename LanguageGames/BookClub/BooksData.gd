func beenRead():
	for i in Global.bookOwned.size():
		if bookBeenRead(Global.bookOwned[i]):
			return Global.bookOwned[i]

func getBookTitle(bookName):
	return BookInfo[bookName]["title"]

func bookBeenRead(bookName):
	return	BookInfo[bookName]["read"]

func getTexture(bookName):
	return BookInfo[bookName]["texture"]

func howLong(bookName):
	return BookInfo[bookName]["numSentences"]

func getPageText(bookName, pageNum):
	var pageKor = BookInfo[bookName]["pageText"][pageNum]["Korean"]
	var pageRom = BookInfo[bookName]["pageText"][pageNum]["Roman"]
	var pageEng = BookInfo[bookName]["pageText"][pageNum]["English"]
	var pageText:Array = [pageKor, pageRom, pageEng]
	return pageText

func fillText(bookName):
	var allBookText:Array
	allBookText.push_back(BookInfo[bookName]["bookText"])
	var i:int = 1
	while i <= BookInfo[bookName]["numSentences"]:
		allBookText.push_back(BookInfo[bookName]["sentences"][str(i)]["Korean"])
		allBookText.push_back(BookInfo[bookName]["sentences"][str(i)]["English"])
		i += 1
	return allBookText
